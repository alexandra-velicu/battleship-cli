{
  "name": "battleship-cli",
  "version": "1.1.0",
  "description": "A Battleship CLI game, built with JavaScript",
  "main": "index.js",
  "author": "Peter A. Weinberg <pweinberg633@gmail.com>",
  "license": "MIT",
  "repository": "no-stack-dub-sack/battleship-cli",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "coverageReporters": [
      "lcov",
      "text",
      "html",
      "json-summary"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./coverage",
          "filename": "index.html",
          "expand": true
        }
      ]
    ]
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "clui": "^0.3.6",
    "figlet": "^1.2.0",
    "inquirer": "^3.3.0"
  },
  "bin": {
    "battleship": "./index.js"
  },
  "devDependencies": {
    "jest": "^21.2.1",
    "jest-html-reporters": "^3.1.7"
  }
}
